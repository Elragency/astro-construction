  <section class="relative md:-mt-[100px]  not-prose">
    <div class="flex items-center justify-center min-h-screen">
      <!-- Image section -->
      <div class="absolute inset-0 z-0">
        <img
          class="w-full h-full object-cover"
          loading="eager"
          src="https://raw.githubusercontent.com/Elragency/astro-construction/eaaec3f8ba3bd0560bacbd1461daca76bebf758c/src/assets/images/hero2.webp"
          alt="best construction experts in montreal"
