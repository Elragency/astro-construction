<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero4
  image={{ src: '~/assets/images/banner1-img1.png', alt: 'AstroWind Hero Image' }}
  >

  </Hero4>


                          <!-- TABS -->
