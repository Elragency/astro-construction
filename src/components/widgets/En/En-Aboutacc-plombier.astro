---
import aboutJSON from "~/content/data/En-about-plombier.json";


interface Props {
	open?: number;
}
const { open } = Astro.props;
---


<div>
	<ul id="acordeon" class="flex items-center flex-col gap-6">
		{
			aboutJSON.map((e, i) => {
				return (
					<li class="border-neutral-600 border-b-[1px]">
						<header
							class="flex justify-between cursor-pointer [&>*]:pointer-events-none opacity-80 hover:opacity-100 "
							data-status={`${i === open ? "enabled" : "disabled"}`}
						>
							<h3 class="text-lg font-extralight md:text-xl">
								{e.title}
							</h3>
							<img
								class="w-8 transition-[rotate]"
								src="https://raw.githubusercontent.com/Elragency/astro-construction/50297db0e21a5c040b2bb709b01b2063ac13d88f/public/imagesp/svg/arrow.svg"
								alt="arrow"
								style={`${
								i === open
									? "rotate : 90deg;"
									: "rotate : 0deg;"
							}`}
							/>
						</header>
						<div
							class="grid transition-all text-white"
							style={`${
								i === open
									? "grid-template-rows: 1fr;"
									: "grid-template-rows: 0fr;"
							}`}
						>
							<div class="h-full overflow-hidden text-white">
								<p class="mb-4 pt-2 text-sm opacity-50 md:text-base text-white ">
									{e.description}
								</p>
							</div>
						</div>
					</li>
				);
			})
		}
	</ul>
</div>
