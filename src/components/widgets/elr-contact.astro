---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  actions?: string | CallToAction[];
  image?: string | any; // TODO: find HTMLElementProps
}

const {
  id,
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),
} = Astro.props;
---

<section class="m-6">
  <section id="soumission">
    <section class="signup-section relative flex items-center py-5">
        <div class="container mx-auto px-4">
            <div class="flex flex-wrap -mx-4">
                <div class="col-md-10 col-lg-8 mx-auto text-center px-4">
                    <form id="myForm" data-netlify="true" name="contact" enctype="multipart/form-data">
                        <input type="hidden" name="form-name" value="contact" />
                        <h3 class="text-lg uppercase font-light">Parlez-nous de vos projets!</h3>
                        <div class="flex flex-wrap -mx-2">
                            <div class="w-full md:w-1/2 px-2 mb-3">
                                <label for="firstName" class="block text-sm font-medium text-gray-700">Nom Complet</label>
                                <input type="text" class="text-black mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" name="firstName" id="firstName" placeholder="Entrer votre Nom..." required>
                            </div>
                            <div class="w-full md:w-1/2 px-2 mb-3">
                                <label for="phone" class="block text-sm font-medium text-gray-700">Numéro de téléphone</label>
                                <input type="phone" class="text-black mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" name="phone" id="phone" placeholder="Votre numéro de téléphone..." required>
                            </div>
                        </div>
                        <div class="flex flex-wrap -mx-2">
                            <div class="w-full md:w-1/2 px-2 mb-3">
                                <label for="email" class="block text-sm font-medium text-gray-700">Courriel</label>
                                <input type="email" class="text-black mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" name="Email" id="email" placeholder="Entrer votre courriel...">
                            </div>
                            <div class="w-full md:w-1/2 px-2 mb-3">
                                <label for="address" class="block text-sm font-medium text-gray-700">Adresse</label>
                                <input type="textarea" class="text-black mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" name="address" id="address" placeholder="Entrer votre adresse..." required>
                            </div>
                        </div>
                        <div class="mb-3 px-2">
                            <label for="sujet" class="block text-sm font-medium text-gray-700">Comment pouvons-nous vous aider</label>
                            <textarea class="text-black mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" name="sujet" id="sujet" placeholder="Parlez-nous de vos projets" required></textarea>
                        </div>

                        <h4 class="mb-3 px-2 text-sm font-medium text-gray-700">Joindre un fichier</h4>
                        <div class="flex flex-wrap -mx-2">
                            <!-- Repeat this block for each file input -->
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile01" id="inputGroupFile01">
                            </div>
                            <!-- ... other file inputs ... -->
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile02" id="inputGroupFile02">
                            </div>
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile03" id="inputGroupFile03">
                            </div>
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile04" id="inputGroupFile04">
                            </div>
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile05" id="inputGroupFile05">
                            </div>
                            <div class="w-1/2 px-2 mb-2">
                                <input type="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-50 file:text-primary-700 hover:file:bg-primary-100" name="inputGroupFile06" id="inputGroupFile06">
                            </div>
                        </div>

                        <p class="px-2">
                            <button class="bg-primary-500 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded" type="submit">ENVOYER</button>
                        </p>
                    </form>
                    <div id="response"></div>
                </div>
            </div>
        </div>
    </section>
</section>

<script>
document.getElementById('myForm').addEventListener('submit', function(e) {
    e.preventDefault();

    var form = this;
    var formData = new FormData(form);
    var responseDiv = document.getElementById('response');

    fetch('/', {
        method: 'POST',
        body: formData
    })
    .then(response => {
        if (response.ok) {
            responseDiv.innerHTML = 'Merci pour votre intérêt, nous allons vous contacter dans les prochaines 24h.';
            setTimeout(() => {
                form.style.display = 'none';
            }, 500);
        } else {
            throw new Error('Network response was not ok.');
        }
    })
    .catch((error) => {
        responseDiv.innerHTML = 'Error: ' + error;
    });
});

function updateFileLabel(input) {
    var label = input.nextElementSibling;
    var fileName = input.files[0] ? input.files[0].name : "Aucun fichier sélectionné";

    label.innerHTML = fileName;
}

// Add event listeners to each file input
document.querySelectorAll('.custom-file-input').forEach(item => {
    item.addEventListener('change', function() {
        updateFileLabel(this);
    });
});
</script>


