---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline is:global>
  :root {
    --aw-font-sans: 'Oswald', sans-serif;
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(0, 0, 0);
    --aw-color-secondary: rgb(0, 0, 0);
    --aw-color-accent: rgb(0, 0, 0);

    --aw-color-text-heading: rgb(255, 255, 255); 
    --aw-color-text-default: rgb(255, 251, 251);
    --aw-color-text-muted: rgba(240, 234, 234, 0.66);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(0, 0, 0);

    ::selection {background-color: white;}

  }

  .dark {
    --aw-font-sans: 'Oswald', sans-serif;
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: #ff3c00;
    --aw-color-secondary: rgb(0, 0, 0);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0); 
    --aw-color-text-default: White;
    --aw-color-text-muted: rgb(255, 255, 255);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);

    ::selection {background-color: white; color: white}

  }
 
</style>
